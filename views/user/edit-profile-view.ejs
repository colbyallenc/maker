<div class="container">
    <h1>Edit Profile</h1>
  	<hr>
	<div class="row">
      <!-- left column -->
      <div class="col-md-3">
        <div class="text-center">
          <form method="post" action="/profile/edit" enctype="multipart/form-data">
            <img src="<%= user.userPhoto%>" class="avatar img-circle profile-image" alt="avatar">
            <br>
            <label for="image-url-input">  </label>
            <input id="image-url-input" type="file"  name="newImage" class="form-control" value="<%= user.userPhoto %>">
      <br>
        </form>
        </div>
      </div>



      <!-- edit form column -->
      <div class="col-md-9 personal-info">
        <div class="alert alert-info alert-dismissable">
          <a class="panel-close close" data-dismiss="alert">Ã—</a>
          <i class="fa fa-coffee"></i>
          This is an <strong>.alert</strong>. Not everything may work due to restless nights.
        </div>
        <h3>Personal info</h3>

        <form class="form-horizontal" role="form" method="post" action="/profile/edit" >
          <div class="form-group">
            <label class="col-lg-3 control-label">Full Name:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" name="profileName" value="<%= user.name %>">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label">Username:</label>
            <div class="col-md-8">
              <input class="form-control" type="text" name="profileUsername" value="<%= user.username %>">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label"> User Job Position:</label>
            <div class="col-lg-8">
              <input class="form-control" type="text" name="aboutChange">
            </div>
          </div>
          <div class="form-group">
            <label class="col-lg-3 control-label"> Skills </label>
            <div class="col-lg-8">
              <input class="form-control" type="text" name="skillsChange">
            </div>
          </div>





          <div class="form-group">
            <label class="col-md-3 control-label">Password:</label>
            <div class="col-md-8">
              <input class="form-control" type="password">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label">Confirm password:</label>
            <div class="col-md-8">
              <input class="form-control" type="password" name="password">
            </div>
          </div>
          <div class="form-group">
            <label class="col-md-3 control-label"></label>
            <div class="col-md-8">
              <input type="submit" class="btn btn-primary" value="Save Changes">
              <span></span>
              <input type="reset" class="btn btn-default" value="Cancel">
            </div>
          </div>
        </form>
      </div>
  </div>
</div>
<hr>
